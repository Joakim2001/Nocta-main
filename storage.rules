rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Allow authenticated users to upload company event images
    match /company-event-images/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to upload optimized videos
    match /optimized-videos/{allPaths=**} {
      allow write: if request.auth != null;
    }
    
    // Allow authenticated users to upload any other files
    match /{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
